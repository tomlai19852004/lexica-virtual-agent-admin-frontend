{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib" : ["esnext", "dom"],
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "declaration": false,
      "outDir": "dist",
      "downlevelIteration": true,
      "jsx": "react"
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  